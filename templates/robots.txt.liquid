{% for group in robots.default_groups %}
  {{- group.user_agent -}}
  
  Allow: /collections/*sort_by*
  Allow: /cart
  Allow: /policies/
  Allow: /account
  Allow: /search
  Allow: /.well-known/shopify/monorail
  Allow: /checkout
  Allow: /blogs/*+*
  Allow: /collections/*+*
  Allow: /account
  Allow: /search

  {% for rule in group.rules %}
    {{- rule -}}
  {% endfor %}

  {%- if group.sitemap != blank -%}
    {{ group.sitemap }}
  {%- endif -%}
{% endfor %}